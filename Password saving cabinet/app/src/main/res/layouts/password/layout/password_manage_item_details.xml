<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        tools:context=".page.PasswordManageItemDetailsFragment">

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/name_cn" />

        <EditText
            android:id="@+id/pwd_ItemDetailsId"
            style="@style/password_manage_details_edit_style" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/address_main_cn" />

        <EditText
            android:id="@+id/pwd_AddressDetailsId"
            style="@style/password_manage_details_edit_style" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/userName_cn" />

        <EditText
            android:id="@+id/pwd_UserNameDetailsId"
            style="@style/password_manage_details_edit_style"
            android:inputType="textVisiblePassword" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/password_cn" />

        <EditText
            android:id="@+id/pwd_PasswordDetailsId"
            style="@style/password_manage_details_edit_style"
            android:inputType="textVisiblePassword" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/remark_cn" />

        <EditText
            android:id="@+id/pwd_RemarkDetailsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pwdItemHeight">

            <Button
                android:id="@+id/pwd_ManageDet_Ok_BtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pwdItemHeight"
                android:enabled="false"
                android:text="@string/ok_cn" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pwd_ManageDet_Cancel_BtnId"
                android:text="@string/cancel_cn" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
