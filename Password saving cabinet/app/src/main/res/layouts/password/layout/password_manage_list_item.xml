<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#007B0606"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout style="@style/password_manage_LinearLayout_style">

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/name_main_cn" />

        <TextView
            android:id="@+id/pwd_ItemId"
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="@dimen/pwdItemWidth" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="wrap_content"
            android:paddingStart="10dp"
            android:text="@string/address_main_cn"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/pwd_AddressId"
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="match_parent" />
    </LinearLayout>

    <LinearLayout style="@style/password_manage_LinearLayout_style">

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="wrap_content"
            android:text="@string/userName_cn" />

        <TextView
            android:id="@+id/pwd_UserNameId"
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="@dimen/pwdItemWidth" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="wrap_content"
            android:paddingStart="10dp"
            android:text="@string/password_cn"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/pwd_PasswordId"
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="match_parent" />
    </LinearLayout>

    <LinearLayout style="@style/password_manage_LinearLayout_style">

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="wrap_content"
            android:text="@string/remark_main_cn" />

        <TextView
            android:id="@+id/pwd_RemarkId"
            style="@style/pwdShowItemTxtStyle"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>