<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white_5"
    android:orientation="vertical"
    android:stretchColumns="1"
>

    <TableRow>

        <TextView
            android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
            android:layout_marginBottom="@dimen/rental_main_gridview_margin_6"

            style="@style/textView_1th"
            android:layout_height="@dimen/rental_main_gridview_title_fontsize"
            android:text="@string/name_cn" />

        <TextView
            android:id="@+id/pwd_ItemId"
            android:layout_columnWeight="@integer/rental_room_details_1width"
            style="@style/rental_textView_context"
            />

        <TextView
            style="@style/textView_1th"
            android:layout_height="@dimen/rental_main_gridview_title_fontsize"
            android:text="@string/address_main_cn"
             />

        <TextView
            android:id="@+id/pwd_AddressId"
            android:minWidth="@dimen/pwdItemWidth"
            android:layout_columnWeight="@integer/rental_room_details_1width"
            style="@style/rental_textView_context"
            />
    </TableRow>

    <TableRow android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
        android:layout_marginBottom="@dimen/rental_main_gridview_margin_6"
        >

        <TextView
            android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
            android:layout_marginBottom="@dimen/rental_main_gridview_margin_6"

            style="@style/textView_1th"
            android:layout_height="@dimen/rental_main_gridview_title_fontsize"
            android:text="@string/userName_cn" />

        <TextView
            android:id="@+id/pwd_UserNameId"
            style="@style/rental_textView_context"
            />

        <TextView
            android:layout_height="@dimen/rental_main_gridview_title_fontsize"
            style="@style/textView_1th"
            android:text="@string/password_cn"
             />

        <TextView
            android:id="@+id/pwd_PasswordId"
            style="@style/rental_textView_context"
            />
    </TableRow>

</TableLayout>