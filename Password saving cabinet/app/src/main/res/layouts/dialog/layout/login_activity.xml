<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".page.dialog.Login_Activity">

    <EditText
        android:id="@+id/dialog_loginPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pwdItemHeight"
        android:layout_marginEnd="@dimen/pwdItemHeight"
        android:hint="@string/input_password_cn"
        android:autofillHints="@string/input_password_cn"
        android:inputType="textPassword" />

    <com.deadline.statebutton.StateButton
        android:layout_height="wrap_content"
        style="@style/StateButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/rental_main_gridview_margin_9"
        android:onClick="cancel_OnClick"
        android:text="@string/cancel_cn"
        android:visibility="gone"
        app:normalBackgroundColor="@color/blue"
        app:pressedBackgroundColor="@color/blue"
        app:round="true"
        app:unableBackgroundColor="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.deadline.statebutton.StateButton
            style="@style/StateButtonStyle"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rental_main_gridview_margin_9"
            android:onClick="resetPasswordBtn_onClick"
            android:text="@string/reset_password_cn"
            app:normalBackgroundColor="@color/red1"
            app:pressedBackgroundColor="@color/red1"
            app:round="true"
            app:unableBackgroundColor="@color/red1" />

        <com.deadline.statebutton.StateButton
            style="@style/StateButtonStyle"
            android:layout_height="wrap_content"
            android:onClick="okBtn_onClick"
            android:text="@string/ok_cn"
            app:normalBackgroundColor="@color/blue"
            app:pressedBackgroundColor="@color/blue"
            app:round="true"
            app:unableBackgroundColor="@color/blue" />


    </LinearLayout>
</LinearLayout>