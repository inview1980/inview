<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".page.dialog.changePasswordDialog">

    <include layout="@layout/main_toolbar" />

    <EditText
        android:id="@+id/dialog_changePWDold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rental_main_gridview_margin_12"
        android:autofillHints="@string/old_password_cn"
        android:hint="@string/old_password_cn"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/dialog_changePWD_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/new_password_cn"
        android:hint="@string/new_password_cn"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/dialog_changePWD_Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/new_password_double_cn"
        android:hint="@string/new_password_double_cn"
        android:inputType="textPassword" />


    <com.deadline.statebutton.StateButton
        style="@style/StateButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="okBtn_onClick"
        android:text="@string/ok_cn"
        app:normalBackgroundColor="@color/blue"
        app:pressedBackgroundColor="@color/blue"
        app:round="true"
        app:unableBackgroundColor="@color/blue" />

</LinearLayout>