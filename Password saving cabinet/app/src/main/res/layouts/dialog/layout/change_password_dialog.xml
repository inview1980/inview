<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".page.dialog.changePasswordDialog"
    android:layout_margin="15dp">

    <EditText
        android:id="@+id/dialog_changePWDold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/old_password_cn"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/dialog_changePWD_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_changePWDold"
        android:hint="@string/new_password_cn"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/dialog_changePWD_Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_changePWD_new"
        android:hint="@string/new_password_double_cn"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/dialog_changePWD_Cancel_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_changePWD_Two"
        android:layout_alignParentEnd="true"
        android:onClick="cancel_OnClick"
        android:text="@string/cancel_cn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dialog_changePWD_Cancel_Button"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/dialog_changePWD_Cancel_Button"
        android:onClick="okBtn_onClick"
        android:text="@string/ok_cn" />
</RelativeLayout>