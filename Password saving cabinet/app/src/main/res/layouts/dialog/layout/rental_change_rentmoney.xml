<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_margin="@dimen/rental_main_gridview_margin"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:text="@string/rental_change_rentmoney_cn"
        android:textSize="@dimen/rental_main_gridview_title_fontsize" />


        <TextView
            style="@style/rental_textView_Lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rental_change_now_rentmoney_cn" />

        <TextView style="@style/rental_textView_Lable"
            android:id="@+id/rental_changeRent_oldNum"/>

        <TextView
            style="@style/rental_textView_Lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rental_change_rentmoney_det_cn" />

        <EditText style="@style/rental_add_edit"
            android:inputType="number"
            android:id="@+id/rental_changeRent_newNum"/>

    <Button
        android:id="@+id/rental_changeRent_okBtn"
        android:text="@string/ok_cn"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/rental_main_gridview_margin" />

</GridLayout>